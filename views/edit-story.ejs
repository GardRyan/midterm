  />

  </head>

  <body>
    <%- include('partials/_header') %>
    <main>
      <h1>Have fun! Create Story! ðŸ¥”</h1>
    </main>
    <section id="edit-story-container">
      <article>
        <div class="story-header">
          <% if (story && story.title) { %>
            <span><strong></strong></span>

        <form method="POST" action="/story/<%= story.id %>/edit-story">
          <input
          class="form-control"
          type="text"
          name="title"
           style="width: 300px; margin: 1em"
           value="<%= story.title %>"
           />
        <form method="POST" action="/story/<%= story.id %>/edit-story">
          <input
            class="form-control"
            type="text"
            name="content"
            style="width: 300px; margin: 1em"
            value="<%= story.content %>"
          />
          <form action="/story/<%= story.id %>/edit-story" method="post">
            <button type="submit" class="edit-story">edit</button>
           </form>
          <% } %>
        </form>
      </article>
    </section>
  </body>
</html>
