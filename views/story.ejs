<!DOCTYPE html>
<html lang="en">

<!-- TODO:  this is for showing one and updating one story -->
<!-- todo: review for proper routing and error handling-->>
<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <%- include('partials/_userStyleSheet') %>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <main>
    <div class="story-header">
      <% if (story && story.title) { %>
        <span><strong><%= story.title %></strong></span>
        <span id="storyId" name="storyId" hidden><%= story.id %></span>
      <% } %>
      <div>
        <p><%= story && story.content %></p>
        <div>users.username</div>
        <form action="/story/<%= story.id %>/edit" method="post">
        <button type="submit" class="edit-story">edit</button>
      </form>
        <form action="/story/<%= story.id %>/delete" method="post">
        <button type="submit" class="delete-story">delete</button>
      </form>
      </div>
    </div>

    <form id="contribution-form" method="POST" action="/story/<%= story.id %>">
      <input
      class="form-control"
      id="contribution-content"
      type="text"
      name="content"
      placeholder="What comes next...?"
      style="width: 300px; margin: 1em"
      value=""
      />
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type = "button" id="storyUp" name="storyUp">Up</button>
      <button type = "button" id="storyDown" name="storyDown">Down</button>
    </form>

    <section id="contributions-container">
      <% if (contributions && contributions.length > 0) { %>
        <% contributions.forEach(contribution => { %>
          <article>
            <div><%= contribution.story_step %></div>
            <p><%= contribution.contributer_id %></p>
            <div>
              <!-- Other contribution properties -->
            </div>

          </article>

          <div class="contribution" id="<%= contribution.id %>">
            <%= contribution.content %>
          </div>
          <div>
              <%= contribution.created_date %>
              <%= contribution.upvotes %>
              <%= contribution.downvotes %>
          </div>
          <form action="/story/contribution/<%= contribution.id %>/edit" method="post">
            <button type="submit" class="edit-contribution">edit</button>
          </form>
          <form action="/story/<%= contribution.id %>/delete-contributions" method="post">
            <button type="submit" class="delete-contribution">delete</button>
          </form>
          
          <!-- </form> -->
          <form action="/story/<%= contribution.id %>/pick-contributions" method="post">
            <button type="submit" class="pick-contribution">Pick</button>
          </form>
          <button type = "button" id="contributionUp<%= contribution.id %>" name="contributionUp<%= contribution.id %>">Up</button>
          <button type = "button" id="contributionDown<%= contribution.id %>" name="contributionDown<%= contribution.id %>">Down</button>
        <% }) %>
      <% }; %>
    </section>
  </main>
</body>

</html>
