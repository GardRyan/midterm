<!DOCTYPE html>
<html lang="en">


<!-- TODO:  this is for showing all stories (include the layout of the filters/orders sidebar) -->

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/stories.css" />
  
  <%- include('partials/_userStyleSheet') %>
  

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/stories.js"></script>
  <script defer src="/scripts/clientHelperFunctions/storiesHelpers.js"></script>
  <script defer src="/scripts/clientHelperFunctions/convertToLocalTime.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <main>
    <div class="content_container" >
      <button id="sidebar-open" class=" btn btn-primary" onclick="w3_open()" style="display: none;">â˜°</button> 
      <div class="w3-sidebar w3-bar-block w3-border-right" style="display:flex" id="mySidebar">
        
        <form id="optionsForm" name="optionsForm">
          <button type="reset" onclick="w3_close()" class="btn btn-primary">Close x</button>
          <div class="radio_container">
            <div>
              <label><input type="radio" id="orderAsc" name="orderDate" value="ASC">Sort By Oldest</label>
              <label><input type="radio" id="orderDesc" name="orderDate" value="DESC">Sort By Newest</label>
            </div>
            <div>
              <label><input type="radio" id="showComplete" name="completed" value="TRUE">Show Complete Stories</label>
              <label><input type="radio" id="showIncomplete" name="completed" value="FALSE">Show Incomplete Stories</label>
            </div>
            <div>
              <label><input type="radio" id="lowFirst" name="orderUpvotes" value="DESC">Highest Ratings</label>
              <label><input type="radio" id="highFirst" name="orderUpvotes" value="ASC">Lowest Ratings</label>
            </div>
          </div>

          <div class="search_container">
            <% if (loginInfo.loggedInUser) { %>
              <label><input type="checkbox" id="myStories" name="showMyStories" value="<%= loginInfo.loggedInUser.id%>">Show My Stories</label>
            <% } %>
            <input class="search_field" type="text" id="title" name="title" placeholder="Search By Title">
            <input class="search_field" type="text" id="username" name="username" placeholder="Search By Author Name">
            <button type="submit" class="btn btn-primary">SEARCH</button>
            <button id="reset" type="reset" class="btn btn-primary">Reset Search</button>
          </div>
        </form>
      </div>
   
    
      <section id="stories_container">
      </section>
    </div>
   

  </main>
</html>
