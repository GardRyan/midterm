<!DOCTYPE html>
<html lang="en">


<!-- TODO:  this is for showing all stories (include the layout of the filters/orders sidebar) -->

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/stories.css" />
  <%- include('partials/_userStyleSheet') %>
  

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/stories.js"></script>
  <script defer src="/scripts/clientHelperFunctions/storiesHelpers.js"></script>
  <script defer src="/scripts/clientHelperFunctions/convertToLocalTime.js"></script>
  
</head>

<body>
  <%- include('partials/_header') %>
  <main>
    <h1>╰(*°▽°*)╯</h1>

    <form id="optionsForm" name="optionsForm">
      <div class="radio_container">
        <label><input type="radio" id="orderAsc" name="orderDate" value="ASC">Order Oldest First</label>
        <label><input type="radio" id="orderDesc" name="orderDate" value="DESC">Order Newest First</label>
        <label><input type="radio" id="showComplete" name="completed" value="TRUE">Show Only Finished Stories</label>
        <label><input type="radio" id="showIncomplete" name="completed" value="False">Show Only Unfinished Stories</label>
        <label><input type="radio" id="lowFirst" name="orderUpvotes" value="ASC">Order by lowest to highest</label>
        <label><input type="radio" id="highFirst" name="orderUpvotes" value="DESC">Order by highest to lowest</label>
      </div>

      <div class="search_container">
        <% if (loginInfo.loggedInUser) { %>
          <label><input type="checkbox" id="myStories" name="showMyStories" value="<%= loginInfo.loggedInUser.id%>">Show My Stories</label>
        <% } %>
        <input class="search_field" type="text" id="title" name="title" placeholder="Search By Title">
        <input class="search_field" type="text" id="username" name="username" placeholder="Search By Author Name">
        <button id="reset" type="reset" class="btn btn-primary">Reset Search</button>
        <button type="submit" class="btn btn-primary">SEARCH</button>
      </div>
    </form>
    
    <section id="stories_container">
    </section>

  </main>
</html>
